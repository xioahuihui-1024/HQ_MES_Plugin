{
  "manifest_version": 3,
  "name": "MES 系统优化助手 Pro",
  "version": "2.3.18",
  "description": "提升 MES 表格展示效果（截断与点击详情）、支持菜单高亮，并加入无感保活功能。顺便留点提示，不然看着像啥都没干，那可太委屈了\uD83E\uDD71",
  "permissions": [
    "storage",
    "cookies",
    "webRequest",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://10.128.100.82/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "MES 优化助手"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://10.128.100.82/*",
        "http://10.128.100.82/nsm_query/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["http://10.128.100.82/*"]
    }
  ]
}