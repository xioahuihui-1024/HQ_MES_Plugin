{
  "manifest_version": 3,
  "name": "MES 助手 Pro",
  "version": "3.0.1",
  "default_locale": "zh_CN",
  "description": "专为 MES 系统打造的增强工具。提供无感自动登录、断线请求重放、表格列拖拽排序/筛选、固定表头及智能数据展示功能，大幅提升工作效率。",
    "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "cookies",
    "webRequest",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://10.128.100.82/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "MES 助手配置"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "http://10.128.100.82/*",
        "http://10.128.100.82/nsm_query/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["http://10.128.100.82/*"]
    }
  ]
}